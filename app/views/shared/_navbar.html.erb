<%# <div class="navbar navbar-expand-sm navbar-light navbar-lewagon"> %>

<div class="navbar navbar-expand-sm navbar-lewagon <%= yield(:navbar_class) %>">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "yougo-logo.png" %>
    <% end %>


    <form class="d-flex search-navbar" action="/offers" method="get">
      <div>
        <input name="city" type="city" class="form-control" id="input-city-navbar" placeholder="Where do you want to go?">
      </div>
      <div>
          <input name="query" type="query" class="form-control" id="input-sport-navbar" placeholder="What is your sport?">
      </div>

      <button type="submit" class="btn">
        <i class="fas fa-search"></i>
      </button>
    </form>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to '<i class="far fa-comments"></i>'.html_safe, "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
