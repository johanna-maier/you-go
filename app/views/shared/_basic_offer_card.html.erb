<%= link_to offer_path(offer), class: "text-decoration-none" do %>
  <div class="card-container">
    <i class="far fa-heart"></i>

    <div class="card-head">
      <%# display 1st Image %>
      <% if offer.photos.attached? %>
        <%= cl_image_tag offer.photos.first.key %>
      <% end %>
    </div>

    <div class="card-body ">
        <div class="card-body-top">
          <div class="card-body-heading"><%= offer.title %></div>
          <div class="card-rating">5</div>
        </div>
        <div class="card-body-bottom">
          <div>Location</div>
          <div><%= sprintf('%.0f', offer.price_per_person) %>â‚¬/person</div>
        </div>
    </div>
  </div>
<% end %>
