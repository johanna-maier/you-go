<div class="container-fluid">
  <div class="row dashboard" data-controller="tabs">
    <div class="col-2 sidebar">
      <div id="sidebar-tabs">
        <% if current_user.avatar_photo.attached? %>
          <%= cl_image_tag current_user.avatar_photo.key, class: "avatar-xl"  %>
        <% else %>
          <%= image_tag "avatar_4.png", class: "avatar-xl" %>
        <% end %>
        <p><i class="fas fa-desktop"></i> &nbsp;&nbsp;Dashboard</p>
        <hr>
        <p class="sidebar-menu-item" data-action="click->tabs#showProfile"><i class="fas fa-user"></i> &nbsp;&nbsp;Your profile</p>
        <p class="sidebar-menu-item" data-action="click->tabs#showConversations"><i class="fas fa-envelope"></i> &nbsp;&nbsp;Conversations</p>
        <p class="sidebar-menu-item" data-action="click->tabs#showBookings"><i class="fas fa-list"></i> &nbsp;&nbsp;Bookings</p>
        <p class="sidebar-menu-item" data-action="click->tabs#showWishlist"><i class="fas fa-heart"></i> &nbsp;&nbsp;Wishlist</p>
      </div>
    </div>
    <div class="col-10">
      <div id="profile" class="<%= 'd-none' unless @page =='profile'%>" data-tabs-target="tab">
        <%= render 'profile' %>
      </div>
      <div id="bookings" class="<%= 'd-none' unless @page =='bookings'%>" data-tabs-target="tab">
        <%= render 'bookings' %>
      </div>
      <div id="wishlist" class="<%= 'd-none' unless @page =='wishlist'%>" data-tabs-target="tab">
        <%= render 'wishlist' %>
      </div>
      <div id="conversations" class="<%= 'd-none' unless @page =='conversations'%>" data-tabs-target="tab">
        <%= render 'conversations' %>
      </div>
    </div>

  </div>
</div>
