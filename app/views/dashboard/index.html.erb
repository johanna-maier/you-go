<div class="container-fluid">
  <div class="row dashboard" data-controller="tabs">
    <div class="col-2 sidebar">
      <div id="sidebar-tabs">
        <% if current_user.avatar_photo.attached? %>
          <%= cl_image_tag current_user.avatar_photo.key, class: "avatar-xl"  %>
        <% else %>
          <%= image_tag "avatar_4.png", class: "avatar-xl" %>
        <% end %>
        <p><i class="fas fa-desktop"></i> Dashboard</p>
        <hr>
        <p data-action="click->tabs#showTab" data-link="profile"><i class="fas fa-user"></i> Your profile</p>
        <p data-action="click->tabs#showTab" data-link="conversations"><i class="fas fa-envelope"></i> Conversations</p>
        <p data-action="click->tabs#showTab" data-link="bookings"><i class="fas fa-list"></i> Bookings</p>
        <p data-action="click->tabs#showTab" data-link="wishlist" data-id="w"><i class="fas fa-heart"></i> Wishlist</p>
      </div>
    </div>
    <div class="col-10">
      <div id="profile" class="active" data-tabs-target="tab">
        <%= render 'profile' %>
      </div>
      <div id="bookings" class="d-none" data-tabs-target="tab">
        <%= render 'bookings' %>
      </div>
      <div id="wishlist" class="d-none" data-tabs-target="tab">
        <%= render 'wishlist' %>
      </div>
      <div id="conversations" class="d-none" data-tabs-target="tab">
        <%= render 'conversations' %>
      </div>
    </div>

  </div>
</div>
