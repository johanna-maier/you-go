<div class="link-hover-red">
  <h2><%= link_to @offer.title, offer_path(@offer) %></h2>
  <br>
  <%= @offer.description %>
  <div class="col col-md-7 mt-5">
      <div class="card-offer-details mt-4 row">
        <h3>Details</h3>
        <p><i class="fas fa-map-marker-alt"></i>&ensp;&nbsp;<%=  @offer.address %></p>
        <p><i class="far fa-clock"></i>&ensp;<%= @offer.offer_date.strftime("%A, %d %B %Y") %> at <%= @offer.offer_time.strftime("%I:%M %P") %> </p>
        <p><i class="fas fa-users"></i>&nbsp;Up to <%= @offer.capacity %> participants</p>
        <% if @offer.price_per_person == 0 %>
          <p><i class="fas fa-euro-sign"></i>&emsp;free </p>
        <% else %>
          <p><i class="fas fa-euro-sign"></i>&emsp;<%= @offer.price_per_person %> â‚¬ per person</p>
       <% end %>

      <% if @offer.is_external %>
        <%= link_to 'Go to Meetup', @offer.url, class: 'btn btn-slim', target: '_blank' %>
      <% else %>
        <%= link_to 'Book now', "#", class: 'btn btn-slim', "data-bs-toggle" => "modal", "data-bs-target" => "#exampleModal"%>
      <% end %>

    <!-- Partial for Bootstrap modal with Booking Form -->
    <%= render 'shared/booking_popup', offer: @offer, booking: @booking  %>
    </div>
  </div>
</div>
